<html>
<head>
	<title>Phone Number Validation</title>
	<script>
		function validate()
		{
			var ph = document.getElementById("phone_check").value;
			if (ph.search(/^[0-9]+[0-9]+[0-9]+-+[0-9]+[0-9]+[0-9]+[0-9]+-+[0-9]+[0-9]+[0-9]+[0-9]+[0-9]+$/) == -1 || ph.length != 14)
			{
				document.write("Invalid Phone Number. Please enter a valid phone number");
				return;
			}
			document.write("Success");
		}
	</script>
</head>
<body bgcolor="grey">
	<h1><u>Validation of Phone Number:</u></h1>
	<form>
	<labeL>Enter the number: </label>
	<input type="text" id="phone_check" /><br />
	<p><i>Enter the number in the format: XXX-XXXX-XXXXX</i></p><hr />
	<input type="submit" value="Check" onclick="validate()" />
	</form>
</body>
</html>


